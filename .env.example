# SaveThemNow.Jesus Environment Configuration
# Copy this file to .env.local and configure your environment

# ===========================================
# DATABASE & FIREBASE CONFIGURATION  
# ===========================================
# Firebase configuration (required for data storage)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account-email@your-project.iam.gserviceaccount.com  
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com/

# ===========================================
# GEOCODING CONFIGURATION
# ===========================================
# Google Maps API (recommended for best accuracy)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mapbox Access Token (alternative geocoding provider)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# ===========================================  
# ALERT & NOTIFICATION CONFIGURATION
# ===========================================
# Webhook URLs for critical alerts
CRITICAL_ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
HEALTH_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/HEALTH/WEBHOOK

# Emergency email list (comma-separated)
EMERGENCY_EMAIL_LIST=admin@yourdomain.com,alerts@yourdomain.com

# Social media API keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Push notification service
PUSH_NOTIFICATION_SERVICE_KEY=your-push-service-key

# ===========================================
# DATA COLLECTION CONFIGURATION
# ===========================================
# Enable/disable data collection
DATA_COLLECTION_ENABLED=true

# Collection intervals (in minutes)
COLLECTION_INTERVAL_MINUTES=30
AMBER_ALERT_INTERVAL_MINUTES=5

# ===========================================
# SYSTEM AUTOMATION
# ===========================================
# Auto-start services in production
AUTO_START_SCHEDULER=true
AUTO_START_HEALTH_MONITORING=true
AUTO_START_ALERTS=true
AUTO_START_SYSTEM=true

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
# Health check thresholds (in hours)
WARNING_THRESHOLD_HOURS=6
CRITICAL_THRESHOLD_HOURS=12
EMERGENCY_THRESHOLD_HOURS=24

# Email service configuration
EMAIL_SERVICE_CONFIGURED=false
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587
EMAIL_USERNAME=alerts@yourdomain.com
EMAIL_PASSWORD=your-email-password

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
# Node environment
NODE_ENV=development

# Debug logging
DEBUG=savethemnow:*

# API rate limiting
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=15

# ===========================================
# EXTERNAL API ENDPOINTS (OPTIONAL OVERRIDES)
# ===========================================
# Override default API endpoints if needed
NAMUS_API_BASE=https://www.namus.gov/api
NCMEC_API_BASE=https://www.missingkids.org/api
AMBER_ALERT_API_BASE=https://www.amberalert.gov/feeds

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# JWT secret for API authentication (if implemented)
JWT_SECRET=your-very-secure-random-string-here

# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# PERFORMANCE TUNING
# ===========================================  
# Batch processing settings
BATCH_SIZE=3
MAX_CONCURRENT_SOURCES=3
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Memory and performance limits
MAX_MEMORY_USAGE_MB=512
HEALTH_CHECK_INTERVAL_MS=60000